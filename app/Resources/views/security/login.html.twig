{% extends "base.html.twig" %}


{% block title %}Connexion{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/login.css') }}">
{% endblock %}




{% block body %}

    <div class="container" id="form">
        <div class="row">
            <div class="col-xs-12">
                <h1>Connexion!</h1>
                {% if error %}
                    <div class="alert alert-danger">
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    </div>
                {% endif %}
                {% for flashMessage in app.session.flashbag.get('needLogin') %}
                    <div class="alert alert-danger">
                        <div>{{ flashMessage }}</div>
                    </div>
                {% endfor %}
                {{ form_start(form) }}
                    {{ form_row(form._username) }}
                    {{ form_row(form._password) }}
                    {{ form_row(form._roles) }}

                    <button type="submit" class="btn btn-success">Connexion <span class="fa fa-lock"></span></button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
