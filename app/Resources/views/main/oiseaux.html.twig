{% extends "base.html.twig"  %}

{% block title %}Oiseaux{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/oiseaux.css') }}">
{% endblock %}

{% block body %}
<div class="container-fluid heading-page">
    <h1 class="text-center">Oiseaux</h1>
    <p class="text-center"><a href="{{ path('homepage') }}">Accueil</a> >> <a href="{{ path('oiseaux') }}">Oiseaux</a></p>
</div>
<div class="wave-svg">
    <svg width="100%" height="100%" viewBox="0 0 1430 80" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
            <g id="wave-driedwood">
                <g transform="translate(720.000000, 40.000000) scale(1, -1) translate(-720.000000, -40.000000) ">
                    <g>
                        <path d="M0,52 C0,52 153,1.46804748e-14 378.5,0 C604,0 836,52 1005,52 C1174,52 1440,0 1440,0 L1440,80 L0,80 L0,52 Z" fill="#E7E1DC"></path>
                        <path d="M0,78 C0,78 153,26 378.5,26 C604,26 836,78 1005,78 C1174,78 1440,26 1440,26 L1440,80 L0,80 L0,78 Z" fill="#F7F3F1"></path>
                    </g>
                </g>
            </g>
        </g>
    </svg>
</div>

<section class="mt-5">
    <div class="container-fluid">
        <div class="heading">
            <h2>Notre Bible !</h2>
            <span>Trouvez vite les oiseaux proches de vous et apprenez à les connaître!</span>
        </div>

        <div id="map" class="mb-4">
        </div>

        {# Liste des oiseaux dans la bdd #}
        <div class="row justify-content-xl-center mt-3">
            {% for bird in birds %}
                {# Carte oiseau observé #}
                <div class="col-12 col-sm-10 col-lg-6 col-xxl-5 mx-auto mx-xl-0 mb-4">
                    <div class="p-2 nao-card mx-auto">
                        <div class="d-flex flex-nowrap align-items-center">
                            <div class="bird-img-wrapper">
                                <img src="{ bird.picture }"
                                     class="bird-img">
                            </div>
                            <div class="col d-flex flex-column justify-content-between">
                                <div class="d-flex flex-column align-self-start">
                                    <h3 class="align-self-end text-left">{{ bird.name | capitalize }}</h3>
                                    {% if brid.taxref is defined %}
                                    <p class="align-self-start m-0">{{ bird.taxref.nomScientifique }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
</section>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDM-LWXFSraqzHfltfjrg0aIgHYdDp9EpI&callback=initMap">
    </script>
    <script src="{{ asset('js/oiseaux.js') }}"></script>
{% endblock %}

