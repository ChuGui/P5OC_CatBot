{% extends "base.html.twig" %}

{% block title %}Oiseaux{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/oiseaux.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid heading-page">
        <h1 class="text-center">Oiseaux</h1>
        <p class="text-center"><a href="{{ path('homepage') }}">Accueil</a> >> <a
                    href="{{ path('oiseaux') }}">Oiseaux</a></p>
    </div>
    <div class="wave-svg">
        <svg width="100%" height="100%" viewBox="0 0 1430 80" version="1.1" xmlns="http://www.w3.org/2000/svg"
             xmlns:xlink="http://www.w3.org/1999/xlink">
            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <g id="wave-driedwood">
                    <g transform="translate(720.000000, 40.000000) scale(1, -1) translate(-720.000000, -40.000000) ">
                        <g>
                            <path d="M0,52 C0,52 153,1.46804748e-14 378.5,0 C604,0 836,52 1005,52 C1174,52 1440,0 1440,0 L1440,80 L0,80 L0,52 Z"
                                  fill="#E7E1DC"></path>
                            <path d="M0,78 C0,78 153,26 378.5,26 C604,26 836,78 1005,78 C1174,78 1440,26 1440,26 L1440,80 L0,80 L0,78 Z"
                                  fill="#F7F3F1"></path>
                        </g>
                    </g>
                </g>
            </g>
        </svg>
    </div>

    <section class="mt-5">
        <div class="container-fluid">
            <div class="heading">
                <h2>Notre Bible !</h2>
                <span>Trouvez vite les oiseaux proches de vous et apprenez à les connaître!</span>
            </div>

            <div class="row justify-content-xl-center mb-5 col-12 col-sm-10 col-lg-12 col-xxl-10 mx-auto px-0 mb-4">
                {# <div class="col-12 col-sm-6 col-md-4">
                    <input type="search"><i class="fa fa-search form-control" aria-hidden="true"></i>
                </div> #}
                <div class="col-12 col-lg-4 mb-3">
                    <div class=" input-group align-items-center ">
                        <input type="text" class="form-control" id="searchUser" placeholder="Rechercher un utilisateur">
                        <a class="input-group-addon text-center" href="#searhUser"><i class="fa fa-search input-group-icon"></i></a>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-2">
                    {{ form_start(formBirdFilter) }}
                    {{ form_row(formBirdFilter.plumage) }}
                </div>
                <div class="col-12 col-md-6 col-lg-2">
                    {{ form_row(formBirdFilter.formeBec) }}
                </div>
                <div class="col-12 col-md-6 col-lg-2">
                    {{ form_row(formBirdFilter.pattes) }}
                </div>
                <div class="col-12 col-md-6 col-lg-2">
                    {{ form_row(formBirdFilter.couleurBec) }}
                    {{ form_end(formBirdFilter) }}
                </div>
            </div>

            <div id="map" class="mb-5 col-12 col-sm-10 col-lg-12 col-xxl-10 mx-auto px-0 mb-4">
            </div>

            {# Liste des oiseaux dans la bdd #}
            <div class="row justify-content-xl-center mt-3">
                {% for bird in birds %}
                    {# Carte oiseau observé #}
                    <div class="col-12 col-sm-10 col-lg-6 col-xxl-5 mx-auto mx-xl-0 mb-4">
                        <div class="p-2 nao-card mx-auto">
                            <div class="d-flex flex-nowrap align-items-center">
                                <div class="bird-img-wrapper">
                                    <a href="#">
                                        <img src="{{ bird.image }}"
                                             class="bird-img" data-toggle="modal"
                                             data-target="#showDetailsModal{{ bird.id }}" aria-hidden="true" data-lastObservationId="{% for observation in bird.observations %}{% if loop.first %}{{ observation.id }}{% endif %}{% endfor %}">
                                    </a>
                                </div>

                                {#-----MODAL SHOW DETAILS-----#}
                                <div class="modal modal-alert pt-5" id="showDetailsModal{{ bird.id }}">
                                    <div class="close-wrap d-flex mx-auto align-items-center justify-content-center">
                                        <button type="button" class="close-button text-center mb-1"
                                                data-dismiss="modal">
                                            &times;
                                        </button>
                                    </div>

                                    <div class="modal-dialog">
                                        <div class="modal-content col-10 col-md-8 col-lg-6 py-4 mx-auto">
                                            <div class="d-flex flex-column row-h1">
                                                <div class="modal-title heading item-h1 justify-content-center mb-3">
                                                    <h2>{{ bird.name }}</h2>
                                                    <p>{{ bird.taxref.nomScientifique }}</p>
                                                </div>
                                                <div class="modal-content heading item-h1 mb-3">
                                                    <div class="row">
                                                        <div class="col-4"><img src="{{ bird.image }}"
                                                                              alt="{{ bird.name }}"
                                                                              class="rounded"
                                                            style="width: 100%">
                                                        </div>
                                                        <div class="col-8">
                                                            <h3>DESCRIPTION</h3>
                                                            <p>{{ bird.description }}</p>


                                                        </div>
                                                    </div>

                                                </div>

                                            </div>
                                            <div class="last-observation" style="background-color: #DED5CD">
                                                {% for observation in bird.observations %}
                                                    {% if loop.first %}
                                                        <h3 class="text-center">{{ "Dernière observation" | capitalize }}</h3>
                                                        <div class="d-flex flex-row row-h1">
                                                            <div class="ml-2 mr-4 item-h1"><img src="{{asset('img/') ~ observation.user.profilePicture }}" alt="{{ observation.user.username }}" class="user-avatar rounded-circle"></div>
                                                            <div class="ml-4 item-h1">
                                                                <p>{{ observation.user.username }} <br>
                                                                    <span class="text-muted">{{ observation.observedAt |ago }}</span> </p>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-6">
                                                                {% if observation.image == null %}
                                                                    <img src="{{ asset('img/anonymeBird.png') }}" class="rounded" style="width: 100%">
                                                                    {% else %}
                                                                        <img src="{{ asset(observation.image) }}" class="rounded" style="width: 100%">
                                                                {% endif %}
                                                            </div>
                                                            <div class="col-6" id="googlemapsObservation{{ observation.id }}" data-observationId="{{ observation.id }}" >
                                                                <div id="map{{ observation.id }}" style="
                                                                border-radius: 25px;
                                                                height: 200px;
                                                                width: 100%;
                                                                margin-left: auto;
                                                                margin-right: auto;"></div>
                                                            </div>
                                                        </div>


                                                    {% endif %}
                                                {% else %}
                                                    <h3>Pas encore d'observation</h3>
                                                    <p><a href="{{ path('observation') }}">Soyez le premier à ajouter une observation de cet oiseau</a></p>
                                                {% endfor %}
                                            </div>

                                        </div>

                                    </div>
                                </div>
                                {#-----END MODAL SHOW DETAILS-----#}


                                <div class="col d-flex flex-column justify-content-between">
                                    <div class="d-flex flex-column align-self-start">
                                        <h3 class="align-self-end text-left">{{ bird.name | capitalize }}</h3>
                                        {% if bird.taxref.nomScientifique is defined %}
                                            <p class="align-self-start m-0">{{ bird.taxref.nomScientifique }}</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
    </section>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDRCQ8TMWxrWoGPHoZX6556wOwkB4T-6wM&callback=initMap">
    </script>
    <script src="{{ asset('js/oiseaux.js') }}"></script>
{% endblock %}

