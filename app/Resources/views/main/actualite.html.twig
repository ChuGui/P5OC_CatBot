{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/actualite.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid heading-page">
        <h1 class="text-center">{{ actualite.title }}</h1>
        <p class="text-center">Accueil >> {{ actualite.title }}</p>
    </div>
    <div class="wave-svg">
        <svg width="100%" height="100%" viewBox="0 0 1430 80" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <g id="wave-driedwood">
                    <g transform="translate(720.000000, 40.000000) scale(1, -1) translate(-720.000000, -40.000000) ">
                        <g>
                            <path d="M0,52 C0,52 153,1.46804748e-14 378.5,0 C604,0 836,52 1005,52 C1174,52 1440,0 1440,0 L1440,80 L0,80 L0,52 Z" fill="#E7E1DC"></path>
                            <path d="M0,78 C0,78 153,26 378.5,26 C604,26 836,78 1005,78 C1174,78 1440,26 1440,26 L1440,80 L0,80 L0,78 Z" fill="#F7F3F1"></path>
                        </g>
                    </g>
                </g>
            </g>
        </svg>
    </div>

    <section class="my-5">
        <div class="container">
            {#----------------#}
            {#PARTIE ACTUALITE#}
            {#----------------#}
            <div class="media">
                <img src="{{ asset('bundles/app/img/'~ user.profilePicture) }}" alt="Photo {{ user.username|capitalize }}" class="d-flex mr-3 profilePicture">
                <div class="media-body"><p class="text-center"></p>{{ user.username|capitalize }}</div>
            </div>

            <h6 class="text-center mb-4">{{ actualite.updateAt|localizeddate('full', 'none')|upper }}</h6>
            
            <div class="flex-wrap media align-items-center justify-content-center p-0">
                <img class="col-12 col-md-4 rounded mr-md-1 mr-lg-4 p-0" src="{{ asset('bundles/app/img/'~actualite.actualiteImage) }}" alt="image d'actualité">
                <div class="media-body col-12 col-md-8">
                    <h3 class="mt-5 mt-md-0 text-center text-md-left">{{ actualite.title|upper }}</h3>
                    <p class="text-justify">{{ actualite.content }}</p>
                </div>
            </div>
        </div>
    </section>

    {#-------------------#}
    {#PARTIE COMMENTAIRES#}
    {#-------------------#}
    <section id="commentSection">
        <div class="container">

            <div class="flex-wrap flex-column comm-display flex-nowrap p-0">
                {% for comment in comments %}
                    <div class="flex-wrap media align-items-center justify-content-center mx-3 my-2 comm">
                        <div class="col-3 col-sm-4 col-lg-2 mr-3">
                            <div class="row align-items-center justify-content-start">
                                <img src="{{ asset('bundles/app/img/'~comment.user.profilePicture) }}" alt="" class="comment-avatar rounded-circle">
                                <div class="ml-sm-3">
                                    <p class="mb-1">{{ comment.user.username|capitalize }}</p>
                                    <span>{{ comment.updateAt|ago }}</span>
                                </div>
                            </div>
                        </div>
                        <div class="media-body col-9 col-sm-8 col-lg-10">
                            <p class="text-justify">{{ comment.content|capitalize }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>

        {#-------------------#}
        {#FORMULAIRE COMMENT#}
        {#-------------------#}
            <div class="row mt-5 align-items-center">
                <div class="col-12 col-lg-9" id="addComment" >
                    {% include 'form/commentForm.html.twig' %}
                </div>
                <div class="col-12 col-lg-3 mt-5 mt-lg-0 social-comment d-flex justify-content-center justify-content-lg-end">
                    <i class="fa fa-facebook-official fa-3x ml-4" aria-hidden="true"></i>
                    <i class="fa fa-instagram fa-3x ml-4" aria-hidden="true"></i>
                    <i class="fa fa-twitter fa-3x ml-4" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <div class="d-flex flex-wrap justify-content-around justify-content-sm-between align-items-center mt-5">
            <a href="{{ path('observation') }}" class="text-center btn btn-outline my-3 my-sm-0">précédent</a>
            <a href="{{ path('observation') }}" class="text-center btn btn-outline my-3 my-sm-0">suivant</a>
        </div>
    </div>


    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/actualite.js') }}"></script>
{% endblock %}