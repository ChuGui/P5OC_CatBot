{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/actualites.css') }}">
{% endblock %}

{% block body %}

  <div class="container-fluid heading-page">
      <h1 class="text-center">ACTUALITÉS</h1>
      <p class="text-center">Accueil >> Actualités</p>
  </div>
  <div class="wave-svg">
    <svg width="100%" height="100%" viewBox="0 0 1430 80" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
            <g id="wave-driedwood">
                <g transform="translate(720.000000, 40.000000) scale(1, -1) translate(-720.000000, -40.000000) ">
                    <g>
                        <path d="M0,52 C0,52 153,1.46804748e-14 378.5,0 C604,0 836,52 1005,52 C1174,52 1440,0 1440,0 L1440,80 L0,80 L0,52 Z" fill="#E7E1DC"></path>
                        <path d="M0,78 C0,78 153,26 378.5,26 C604,26 836,78 1005,78 C1174,78 1440,26 1440,26 L1440,80 L0,80 L0,78 Z" fill="#F7F3F1"></path>
                    </g>
                </g>
            </g>
        </g>
    </svg>
  </div>

  <section class="mt-5">
    <div class="container-fluid">
      <div class="heading">
          <h2>Quoi de neuf ?</h2>
          <span>Des actualités en lien avec la recherche et l'observation de vos animaux préférés</span>
      </div>
       <div class="row justify-content-center">
          {% for actualite in actualites %}
              <div class="card p-0" style="width: 30rem;">
                <div class="mb-4">
                  <img class="card-img-top" src="{{ asset('img/'~ actualite.actualiteImage) }}" alt="image_actualite" >
                </div>
                <div class="card-title text-center px-3 mb-0">
                  <p>{{ actualite.updateAt|localizeddate('full', 'none')|upper }}</p>
                  <h3><a href="{{ path('actualite', {'id': actualite.id}) }}">{{ actualite.title|upper }}</a></h3></div>
                <div class="card-body text-justify"><p>{{ actualite.content|truncate(100,false,'...') }}</p></div>
              </div>
          {% endfor %}     
       </div>
    </div>
    <div class="container text-center mt-3">
        <a href="{{ path('observation') }}" class="btn btn-outline mx-auto">VOIR PLUS</a>
    </div>
  </section>

{% endblock %}