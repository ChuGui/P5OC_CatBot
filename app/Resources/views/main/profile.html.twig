                                            <img src="{{ asset('img/observations/anonymeBird.png') }}"
                                                                       alt="prise par {{ userObservation.user.username }}"
                                                                       class="bird-img">
                                            {% else %}

                                                <img src="{{ asset('img/observations/'~userObservation.image) }}"
                                                     alt="prise par {{ userObservation.user.username }}"
                                                     class="bird-img">
                                        {% endif %}

                                    </div>
                                    <div class="col d-flex flex-column justify-content-between">
                                        <div class="align-self-end">
                                            <span class="text-muted time">Observé il y
                                                a {{ userObservation.updateAt | ago }}</span>
                                        </div>
